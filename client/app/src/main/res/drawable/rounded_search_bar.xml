<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Change this to any color you prefer -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: Add a border if desired -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Border color, adjust as needed -->

    <!-- Optional padding inside the shape -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>